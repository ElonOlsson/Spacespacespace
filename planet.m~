classdef planet

    
    properties
        mass = 0;            %Mass of planet (kg)
        velocity = [0 0 0];        %Velocity of planet, vector of three [x, y, z]
        position = [0 0 0]        %Position of the planet, vector of three [x, y, z]

    end
    
    methods
        function obj=planet(m, v, p)
            
            obj.mass = m;
            obj.velocity = v;
            obj.position = p;
        end
    end
    
end

